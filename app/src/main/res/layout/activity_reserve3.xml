<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reserve_Activity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="325dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/progress3" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="#3390FF"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="방문 예약 신청"
            android:textColor="@color/black"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BFC6CD"
                android:text="방문 차량 등록"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"

                >
                <EditText
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:id="@+id/btn_date_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:text="방문 차량 정보"
                    android:textAlignment="center"

                    />
                <EditText
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:id="@+id/btn_date_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:text="방문 차량 번호"
                    android:textAlignment="center"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BFC6CD"
                android:text="반입 물품 등록"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="반입 물품 등록 신청"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>